# Bio-RAG Environment Variables
# Copy this file to .env and fill in your values

# ===================
# App Settings
# ===================
APP_NAME=Bio-RAG
DEBUG=true
DEMO_MODE=true  # Set to false when you have valid API keys

# ===================
# Database
# ===================
# SQLite (for local development)
DATABASE_URL=sqlite+aiosqlite:///./biorag.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/biorag

# ===================
# Redis (optional)
# ===================
# Uncomment for caching support
# REDIS_URL=redis://localhost:6379/0

# ===================
# ChromaDB
# ===================
CHROMA_PERSIST_DIR=./chroma_data

# ===================
# OpenAI
# ===================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# ===================
# PubMed
# ===================
PUBMED_API_KEY=your-pubmed-api-key-here
PUBMED_RATE_LIMIT=10

# ===================
# JWT Authentication
# ===================
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===================
# CORS
# ===================
CORS_ORIGINS=["http://localhost:3000"]

# ===================
# Frontend
# ===================
VITE_API_URL=http://localhost:8000
